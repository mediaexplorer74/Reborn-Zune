<UserControl
    x:Class="Reborn_Zune.Control.ShadowSpotLightControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Reborn_Zune.Control"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utilities="using:Reborn_Zune.Utilities"
    d:DesignHeight="175"
    d:DesignWidth="175"
    mc:Ignorable="d">

    <Grid>
        <Grid.Lights>
            <utilities:SpotLight />
        </Grid.Lights>
        <Grid
            utilities:SpotLight.IsTarget="True"
            Background="Gray"
            Opacity="0.55">
            <Border />
        </Grid>
    </Grid>
</UserControl>
